# MCP FinBot
MCP_FINBOT_API_HEALTH_URL=http://finbot-service:5555/finbot/health
MCP_FINBOT_REDIS_HEALTH_URL=http://redis-exporter:9121/health
MCP_FINBOT_FORECAST_HEALTH_URL=http://forecast-service:8080/health
MCP_FINBOT_KYVERNO_HEALTH_URL=http://kyverno-svc.kyverno/healthz
MCP_FINBOT_PROM_QUERY_CPU_USAGE=sum(rate(container_cpu_usage_seconds_total{pod=~"finbot.*"}[5m]))*100
MCP_FINBOT_PROM_QUERY_MEMORY_USAGE=avg(container_memory_usage_bytes{pod=~"finbot.*"})/1024/1024/1024
MCP_FINBOT_PROM_QUERY_ACTIVE_SESSIONS=sum(finbot_active_sessions_total)
MCP_FINBOT_PROM_QUERY_API_LATENCY=histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{app="finbot"}[5m])) by (le))

# MCP MuBot
MCP_MUBOT_API_HEALTH_URL=http://mubot-service:5556/mubot/health
MCP_MUBOT_POSTGRES_HEALTH_URL=http://postgres-exporter:9187/health
MCP_MUBOT_INGESTION_HEALTH_URL=http://mubot-ingestion:8080/health
MCP_MUBOT_RECONCILIATION_HEALTH_URL=http://reconciliation-job/health
MCP_MUBOT_PROM_QUERY_RECORDS_PROCESSED=sum(rate(mubot_records_processed_total[1h]))
MCP_MUBOT_PROM_QUERY_DB_LATENCY=histogram_quantile(0.95, sum(rate(db_write_latency_milliseconds_bucket{app="mubot"}[5m])) by (le))
MCP_MUBOT_PROM_QUERY_RECON_RATE=avg(mubot_reconciliation_success_ratio)
MCP_MUBOT_PROM_QUERY_DATA_QUALITY=avg(mubot_data_quality_score)

# MCP AIOps
MCP_AIOPS_API_HEALTH_URL=http://aiops-service:5557/dese/health
MCP_AIOPS_CORRELATION_HEALTH_URL=http://correlation-engine:8080/health
MCP_AIOPS_ANOMALY_HEALTH_URL=http://anomaly-detector:8080/health
MCP_AIOPS_INGESTION_HEALTH_URL=http://telemetry-ingestion:8080/health
MCP_AIOPS_PROM_QUERY_MODEL_CPU=avg(rate(container_cpu_usage_seconds_total{pod=~"aiops-model.*"}[5m]))*100
MCP_AIOPS_PROM_QUERY_MODEL_MEMORY=avg(container_memory_usage_bytes{pod=~"aiops-model.*"})/1024/1024/1024
MCP_AIOPS_PROM_QUERY_ANOMALIES=sum(rate(aiops_anomalies_detected_total[15m]))
MCP_AIOPS_PROM_QUERY_INGESTION_DELAY=avg(aiops_ingestion_delay_milliseconds)

# MCP Observability
MCP_OBSERVABILITY_PROMETHEUS_HEALTH_URL=http://prometheus:9090/-/healthy
MCP_OBSERVABILITY_GRAFANA_HEALTH_URL=http://grafana:3000/api/health
MCP_OBSERVABILITY_LOKI_HEALTH_URL=http://loki:3100/ready
MCP_OBSERVABILITY_TEMPO_HEALTH_URL=http://tempo:3200/ready
MCP_OBSERVABILITY_PROM_QUERY_ACTIVE_TARGETS=sum(prometheus_target_scrape_pool_targets{job="kubernetes-service-endpoints"})
MCP_OBSERVABILITY_PROM_QUERY_TOTAL_TARGETS=sum(prometheus_target_metadata_length{job="kubernetes-service-endpoints"})
MCP_OBSERVABILITY_PROM_QUERY_LOG_INGESTION=sum(rate(loki_ingester_bytes_received_total[5m]))
MCP_OBSERVABILITY_PROM_QUERY_ACTIVE_ALERTS=sum(ALERTS{alertstate="firing"})
MCP_OBSERVABILITY_PROM_QUERY_QUERY_LATENCY=histogram_quantile(0.99, sum(rate(grafana_http_request_duration_seconds_bucket{route="query"}[5m])) by (le))

