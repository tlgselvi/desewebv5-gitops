# Database Configuration
# Docker Compose: All services run in Docker, use service names as hostnames
POSTGRES_USER=dese
POSTGRES_PASSWORD=dese123
POSTGRES_DB=dese_ea_plan_v5
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
DB_HOST=db
DB_PORT=5432
DB_NAME=${POSTGRES_DB}
DB_USER=${POSTGRES_USER}
DB_PASSWORD=${POSTGRES_PASSWORD}

# Database Replication (Optional - for read replicas)
# Enable read replica support
DATABASE_ENABLE_READ_REPLICA=false
# Comma-separated list of read replica URLs
# Example: DATABASE_READ_REPLICA_URLS=postgresql://user:pass@db-replica-1:5432/db,postgresql://user:pass@db-replica-2:5432/db
DATABASE_READ_REPLICA_URLS=
# Maximum pool size per connection
DATABASE_MAX_POOL_SIZE=20
# Replication lag threshold in milliseconds (default: 1000ms)
DATABASE_REPLICATION_LAG_THRESHOLD_MS=1000
# PostgreSQL Replication User (for setting up replicas)
POSTGRES_REPLICATION_USER=replicator
POSTGRES_REPLICATION_PASSWORD=replication_password

# Redis Configuration
# Docker Compose: All services run in Docker, use service names as hostnames
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis Cluster (Optional - for high availability)
# Enable Redis cluster mode
REDIS_CLUSTER_ENABLED=false
# Comma-separated list of cluster node addresses
# Example: REDIS_CLUSTER_NODES=redis-cluster-0:6379,redis-cluster-1:6379,redis-cluster-2:6379
REDIS_CLUSTER_NODES=
# Maximum retry delay in milliseconds
REDIS_CLUSTER_RETRY_STRATEGY_MAX_DELAY=2000

# IoT Configuration
MQTT_BROKER_URL=mqtt://mosquitto:1883

# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1
# CORS_ORIGIN should match the frontend port
# Docker: Frontend runs on port 3002
# Local dev: Frontend runs on port 3001
CORS_ORIGIN=http://localhost:3002

# Frontend Configuration
# Note: Frontend runs on port 3002 in Docker (mapped from container port 3000)
# Backend API runs on port 3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
# Frontend URL (for redirects and callbacks)
FRONTEND_URL=http://localhost:3002

# Security
JWT_SECRET=ea-plan-master-control-v6.8.1-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
# Enable mock login for development/testing (set to "true" or "1" to enable)
ENABLE_MOCK_LOGIN=true

# External APIs
OPENAI_API_KEY=your-openai-api-key
GOOGLE_SEARCH_CONSOLE_API_KEY=your-google-api-key
AHREFS_API_KEY=your-ahrefs-api-key
LIGHTHOUSE_CI_TOKEN=your-lighthouse-ci-token

# Vector DB Configuration
# Provider: 'pinecone', 'weaviate', 'qdrant', 'chroma'
VECTOR_DB_PROVIDER=pinecone
VECTOR_DB_API_KEY=your-vector-db-api-key
VECTOR_DB_ENVIRONMENT=us-east-1-aws
VECTOR_DB_INDEX_NAME=dese-index
VECTOR_DB_DIMENSION=1536
VECTOR_DB_METRIC=cosine
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_TIMEOUT=30000
VECTOR_DB_MAX_RETRIES=3

# Embedding Configuration
# Model: 'openai', 'sentence-transformers', 'custom'
EMBEDDING_MODEL=openai
EMBEDDING_MODEL_NAME=text-embedding-3-small
EMBEDDING_DIMENSION=1536
EMBEDDING_CACHE_ENABLED=true
EMBEDDING_CACHE_TTL=86400

# RAG Configuration
# LLM Provider: 'openai', 'anthropic'
RAG_LLM_PROVIDER=openai
RAG_LLM_MODEL=gpt-4-turbo-preview
RAG_MAX_CONTEXT_TOKENS=8000
RAG_TOP_K=5
RAG_TEMPERATURE=0.7
RAG_ENABLE_STREAMING=false

