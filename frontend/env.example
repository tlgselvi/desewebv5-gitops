# =============================================================================
# DESE EA PLAN v7.1 - Frontend Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values
# Never commit .env.local to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------

# App URL (used for sitemap, canonical URLs, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3001

# App Name (displayed in title, etc.)
NEXT_PUBLIC_APP_NAME="Dese EA Plan"

# App Version
NEXT_PUBLIC_APP_VERSION=7.1.0

# Environment: development | staging | production
NODE_ENV=development

# -----------------------------------------------------------------------------
# Backend API
# -----------------------------------------------------------------------------

# Backend API URL (for server-side requests)
# In Docker: http://app:3000
# Local dev: http://localhost:3000
BACKEND_URL=http://localhost:3000

# Internal API URL (for SSR/middleware)
INTERNAL_API_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------

# JWT Secret (must match backend)
# JWT_SECRET=your-secret-key

# Session cookie name
# SESSION_COOKIE_NAME=dese-session

# Session expiry in seconds (default: 7 days)
# SESSION_EXPIRY=604800

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable/disable features
NEXT_PUBLIC_FEATURE_FLAG=false

# Enable mock login (for development)
# NEXT_PUBLIC_ENABLE_MOCK_LOGIN=true

# Enable debug mode (shows additional logging)
# NEXT_PUBLIC_DEBUG=false

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# -----------------------------------------------------------------------------

# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx

# -----------------------------------------------------------------------------
# Third-party Services (Optional)
# -----------------------------------------------------------------------------

# Google OAuth
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# -----------------------------------------------------------------------------
# Development Only
# -----------------------------------------------------------------------------

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Enable source maps in production (not recommended)
# NEXT_PUBLIC_SOURCE_MAPS=false

